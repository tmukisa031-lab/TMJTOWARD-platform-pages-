{
  "version": 2,
  "builds": [
    {
      "src": "scripts/api-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "pages/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "styles/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "scripts/api-server.js" },
    { "src": "/(.*)", "dest": "/pages/$1" }
  ]
}